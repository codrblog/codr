{
  "compileOnSave": true,
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "esnext",
    "importHelpers": true,
    "module": "commonjs",
    "noEmitHelpers": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./dist/*.ts",
    "./dist/**/*.ts"
  ]
}
